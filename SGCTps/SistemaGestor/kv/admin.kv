<AdminScreen>:
    name: "admin"
    GridLayout:
        cols: 2
        rows: 2
        spacing: 10
        padding: 10

        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        # Col: 1 Row: 1
        CustLabel:
            text: "Administrador"
            size_hint_x: None
            width: 200
            size_hint_y: None
            height: 50
        # Col: 2 Row: 1
        GridLayout:
            cols: 1
            rows: 3
            size_hint_y: None
            width: 50
            CustLabel:
                text: "Universidad Nacional de Lanús"
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: "Sistema Gestor de Corrección de TPs(SGCTps)"
                    size_hint: .8, 1
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: ""
                    size_hint: .6, 1
                CustButton:
                    text: "Volver"
                    on_press: app.root.current = "login"
                    size_hint: .1, 1

        # Col: 1 Row: 2


        BoxLayout:
            size_hint_x: None
            width: 200
            spacing: 10
            padding: 10
            orientation: "vertical"
            CustButton:
                text: "Mostrar Peticiones"
                on_press: root.mostrarPeticiones()
                on_press: app.root.current = "peticiones"
            CustButton:
                text: "Crear Usuario"
                on_press: root.mostrarPeticiones()
                on_press: app.root.current = "peticiones"
            CustButton:
                text: "Modificar Usuario"
                on_press: root.mostrarPeticiones()
                on_press: app.root.current = "peticiones"
            CustButton:
                text: "Eliminar Usuario"
                on_press: root.mostrarPeticiones()
                on_press: app.root.current = "peticiones"
            Label:
            Label:
            CustButton:
                text: "Ayuda"
        # Col: 2 Row: 2
