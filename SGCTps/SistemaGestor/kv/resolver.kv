<ResolverScreen>:
    name: "resolver"
    GridLayout:
        cols: 2
        rows: 2
        spacing: 1
        padding: 10

        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        # Col: 1 Row: 1
        CustLabel:

            text: "Alumno"
            size_hint_x: None
            width: 200
            size_hint_y: None
            height: 50
        # Col: 2 Row: 1
        GridLayout:
            cols: 1
            rows: 3
            size_hint_y: None
            width: 50
            CustLabel:
                text: "Universidad Nacional de Lanús"
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: "Sistema Gestor de Corrección de TPs(SGCTps)"
                    size_hint: .8, 1
                CustLabel:
                    size_hint: .2, 1
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: ""
                    size_hint: .6, 1
                CustButton:
                    text: "Volver"
                    on_press: app.root.current = "alumno"
                    size_hint: .1, 1
        # Col: 1 Row: 2
        BoxLayout:


            size_hint_x: None
            width: 200
            spacing: 10
            padding: 2
            orientation: "vertical"
            Label:









            CustButton:
                text: "Información"
                on_press: root.resv_info()
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                CustLabel:
                    text: root.infom


                CustLabel:
                    text: root.materia
                    color: 0, 0, 0, 0.7
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                CustLabel:
                    text: root.infoc

                CustLabel:
                    text: root.carrera
                    color: 0, 0, 0, 0.7


            Label:
            CustButton:
                text: "Comenzar"
                on_press: root.resv_tp()
            CustButton:
                text: "Ayuda"



        BoxLayout:

            orientation: "vertical"
            spacing: 1
            padding: 40
            CustLabel:
                text: "Pregunta:"
                font_size: 20
                size_hint_y: None
                height: 50

            TextInput:
                text: root.consigna2

                spacing: 10
                size_hint:1, 0.60
                id: idtp
                multiline: False
            CustLabel:
                text: "Elegir respuesta correcta:"
                font_size: 20
                size_hint_y: None
                height: 50
            BoxLayout:
                orientation: "horizontal"
                TextInput:
                    text: root.r1
                    id: profesor
                    multiline: False
                CheckBox:
                    size_hint_x: None
                    width: 100
                    color:  0.9, 0.9, 0.9, 10
                    #on_active:
            BoxLayout
                orientation: "horizontal"
                TextInput:
                    text: root.r2
                    id: profesor
                    multiline: False
                CheckBox:
                    size_hint_x: None
                    width: 100
                    color:  0.9, 0.9, 0.9, 10
                    active: root.is_active
            BoxLayout:
                orientation: "horizontal"
                TextInput:
                    text: root.r3
                    multiline: False
                CheckBox:
                    size_hint_x: None
                    width: 100
                    color:  0.9, 0.9, 0.9, 10
                    #on_active:



            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: 60
                Label

                BoxLayout:
                    orientation: "horizontal"
                    Label:


                    Label:
                    Label:

                    Button:

                        text: "Corregir"
                        background_down: 'images/boton_presionado.png'
                        on_press: root.toggle()
                    Button:
                        on_press: root.resv_tp()
                        text: "Siguiente"
                        background_down: 'images/boton_presionado.png'
                        on_press: root.ir_siguiente()


