<RegistrarseScreen>:
    name: "registrarse"
    nombre_input: nombre
    apellido_input: apellido
    email_input: email
    clave_input: clave
    GridLayout:
        rows: 3
        spacing: 10
        padding: 10
        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        # Col: 1 Row: 1
        GridLayout:
            rows: 3
            size_hint_y: None
            CustLabel:
                text: "Universidad Nacional de Lanús"
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: "Sistema Gestor de Corrección de TPs(SGCTps)"
                    size_hint: .8, 1
        # Col: 1 Row: 2
        BoxLayout:
            orientation: "vertical"
            padding: 10
            spacing: 10
            CustLabel:
                text: "Para solicitar acceso al sistema complete los siguientes datos:"
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Nombre:"
                CustTextInput:
                    id: nombre
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Apellido:"
                CustTextInput:
                    id: apellido
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "E-mail:"
                CustTextInput:
                    id: email
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Clave:"
                CustTextInput:
                    id: clave
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                padding: 10
                CustButton:
                    text: "Volver"
                    on_press: app.root.current = "login"
                    size_hint: .2, 1
                CustLabel:
                    text: ""
                    size_hint: .4, 1
                CustButton:
                    text: "Enviar"
                    on_press: root.crear_peticion()
                    size_hint: .2, 1
