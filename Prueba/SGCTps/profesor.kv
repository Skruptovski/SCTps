#: import main profesor

<Profesor>:
    cols: 2
    rows: 2
    spacing: 5
    padding: 5

    canvas:
        Color:
            rgba:  0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.x, self.y
            size: self.size

    Label:
        size_hint_x: None
        width: 200
        size_hint_y: None
        height: 50

    GridLayout:
        cols: 1
        rows: 1
        size_hint_y: None
        width: 50

        Label:
            text: "Sistema Gestor de Corrección de Trabajos Prácticos"
            color:  0, 0, 0, 1
            font_size: 20
            Label:

    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/c1.png'
        size_hint_x: None
        width: 200
        orientation: "vertical"
        Label:
        Button:
            text: "Crear Trabajo Practico"
        Button:
            text: "Buscar Trabajo Practico"

        Label:
        Label:
        Label:

    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/im1.png'