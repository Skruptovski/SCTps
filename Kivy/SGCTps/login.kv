#: import main login

<CustomPopup>
    size_hint: .5, .5
    title: "Ayuda"
    title_size: 20
    Label:
        text: "\nSi usted es Docente o Administrador:\n    1- Ingrese usuario y contraseña.\n    2- Presione Iniciar sesión.\n\n    Si no posee acceso puede solicitarlo desde la opción Registrarse.\n\nSi usted es un alumno:\n    1- Seleccione el botón Ingresar como alumno (no requiere credenciales).\n\nPara volver haga click fuera de la ventana de Ayuda."
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: 'left'
        valign: 'top'

<CustButton@Button>
    font_size: 18
    background_normal: 'images/boton_normal.png'
    background_down: 'images/boton_presionado.png'

<CustLabel@Label>
    font_size: 18
    color: 0.5, 0, 0, 1

<CustGridLayout@GridLayout>
    cols: 1
    rows: 8
    spacing:10
    padding:10

<Login>:
    cols: 3
    rows: 1
    spacing: 10
    padding: 10
    usuario_input: usuario
    password_input: password
    canvas:
        Color:
            rgba:  0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.x, self.y
            size: self.size
    BoxLayout:
        Label:
        Label:
            canvas:
                Rectangle:
                    source: 'images/logo_unla.png'
                    pos: self.pos
                    size: 100, 110
        Label:
    CustGridLayout:
        CustLabel:
            text: "Sistema Gestor de Corrección de Trabajos Prácticos"
            bold: True
            underline: True
            font_size: 20
        CustLabel:
            text: "Usuario"
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
        TextInput:
            id: usuario
            multiline: False
            font_size: 18
        CustLabel:
            text: "Password"
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
        TextInput:
            id: password
            font_size: 18
            multiline: False
            allow_copy: False
            password: True
        CustButton:
            text: "Iniciar sesión"
            on_press: root.iniciar_sesion()
        Label:
        CustButton:
            text: "Ingresar como alumno"
            on_press: root.ingresar_alumno()
    CustGridLayout:
        Label:
        Label:
        Label:
        Label:
        CustButton:
            text: "Registrarse"
            on_press: root.registrarse()
        Label:
        Label:
        CustButton:
            text: "Ayuda"
            on_press: root.ayuda()
