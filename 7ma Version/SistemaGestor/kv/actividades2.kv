<RespScreen>:
    name: "resp"

    GridLayout:
        cols: 2
        rows: 2
        spacing: 10
        padding: 10

        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        # Col: 1 Row: 1
        CustLabel:
            text: "Docente"
            size_hint_x: None
            width: 200
            size_hint_y: None
            height: 50
        # Col: 2 Row: 1
        GridLayout:
            cols: 1
            rows: 3
            size_hint_y: None
            width: 50
            CustLabel:
                text: "Universidad Nacional de Lanús"
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: "Sistema Gestor de Corrección de TPs(SGCTps)"
                    size_hint: .8, 1
                CustLabel:
                    size_hint: .2, 1
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: ""
                    size_hint: .6, 1
                CustButton:
                    text: "Volver"
                    on_press: app.root.current = "docente"
                    size_hint: .1, 1
        # Col: 1 Row: 2
        BoxLayout:
            size_hint_x: None
            width: 200
            spacing: 20
            padding: 2
            orientation: "vertical"

            CustButton:
                text: "Crear Trabajo"
                background_normal: 'images/boton_presionado.png'
            CustButton:
                text: "Modificar Trabajo"

            BoxLayout:
                orientation: "vertical"
                CustLabel:
                    text: "Titulo"
                TextInput:
                    id: titulob
                    multiline: False
            BoxLayout:
                orientation: "vertical"
                CustLabel:
                    text: "Materia"
                TextInput:
                    id: materiab
                    multiline: False
            CustButton:
                text: "Buscar Trabajo"
            CustButton:
                text: "Ayuda"



        BoxLayout:

            orientation: "vertical"
            spacing: 1
            padding: 40
            CustLabel:
                text: "Pregunta"
                font_size: 18
            TextInput:

                id: idtp
                multiline: False
            CustLabel:
                text: "Respuesta"
                font_size: 18
            TextInput:
                id: profesor
                multiline: False

            CustLabel:
            Button:
                text: "NuevaPregunta"
                background_normal: 'images/boton_normal.png'
                background_down: 'images/boton_presionado.png'
                on_press: root.iniciar_sesion()
            Label:

            BoxLayout:

                orientation: "horizontal"

                Button:
                    size_hint_y: None
                    height: 50
                    text: "Volver"
                Button:
                    size_hint_y: None
                    height: 50
                    text: "Terminar"
