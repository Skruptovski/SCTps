<RegistrarseScreen>:
    name: "registrarse"
    GridLayout:
        rows: 3
        spacing: 10
        padding: 10
        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        # Col: 1 Row: 1
        GridLayout:
            rows: 3
            size_hint_y: None
            CustLabel:
                text: "Universidad Nacional de Lanús"
            BoxLayout:
                orientation: "horizontal"
                CustLabel:
                    text: "Sistema Gestor de Corrección de TPs(SGCTps)"
                    size_hint: .8, 1
        # Col: 1 Row: 2
        BoxLayout:
            orientation: "vertical"
            padding: 10
            spacing: 10
            CustLabel:
                text: "Para solicitar acceso al sistema complete los siguientes datos:"
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Nombre:"
                TextInput:
                    id: nombre
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Apellido:"
                TextInput:
                    id: apellido
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "E-mail:"
                TextInput:
                    id: email
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Usuario:"
                TextInput:
                    id: usuario
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Contraseña:"
                TextInput:
                    id: clave
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10
                CustLabel:
                    text: "Rol:"
                TextInput:
                    id: rol
                    multiline: False
                    font_size: 15
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                padding: 10
                CustButton:
                    text: "Volver"
                    on_press: app.root.current = "login"
                    size_hint: .2, 1
                CustLabel:
                    text: ""
                    size_hint: .4, 1
                CustButton:
                    text: "Enviar"
                    on_press: app.root.current = "login"
                    size_hint: .2, 1
