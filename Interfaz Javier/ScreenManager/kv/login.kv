#: include kv/popups.kv
    
<LoginScreen>:
    name: "login"
    usuario_input: usuario
    password_input: password
    GridLayout:
        cols: 3
        rows: 1
        spacing: 10
        padding: 10
        canvas:
            Color:
                rgba:  0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.x, self.y
                size: self.size
        BoxLayout:
            Label:
            Label:
                canvas:
                    Rectangle:
                        source: 'images/logo_unla.png'
                        pos: self.pos
                        size: 100, 110
            Label:
        CustGridLayout:
            CustLabel:
                text: "Sistema Gestor de Corrección de Trabajos Prácticos"
                bold: True
                underline: True
                font_size: 20
            CustLabel:
                text: "Usuario"
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
            TextInput:
                id: usuario
                multiline: False
                font_size: 18
            CustLabel:
                text: "Password"
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
            TextInput:
                id: password
                font_size: 18
                multiline: False
                allow_copy: False
                password: True
            CustButton:
                text: "Iniciar sesión"
                on_press: root.iniciar_sesion()
            Label:
            CustButton:
                text: "Ingresar como alumno"
                on_press: app.root.current = "alumno"
        CustGridLayout:
            Label:
            Label:
            Label:
            Label:
            CustButton:
                text: "Registrarse"
                on_press: app.root.current = "registrarse"
            Label:
            Label:
            CustButton:
                text: "Ayuda"
                on_press: root.ayuda()
